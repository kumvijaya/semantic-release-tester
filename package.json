{
    "name": "semantic-release-tester",
    "repository": {
      "type": "git",
      "url": "https://github.com/kumvijaya/semantic-release-tester.git"
    },
    "private": true,
    "scripts": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start",
      "export": "next build && next export"
    },
    "dependencies": {
      "next": "^10.0.0",
      "react": "17.0.1",
      "react-dom": "17.0.1",
      "date-fns": "^2.11.1",
      "gray-matter": "^4.0.2",
      "remark": "^12.0.0",
      "remark-html": "^12.0.0"
    },
    "devDependencies": {
      "@octopusdeploy/octopackjs": "^0.2.4",
      "semantic-release": "^21.0.1"
    },
    "release": {
        "branches": [
          "master",
          "main",
          {
            "name": "beta",
            "prerelease": true
          },
          {
            "name": "alpha",
            "prerelease": true
          }
        ],
        "plugins": [
          ["@semantic-release/commit-analyzer", {
            "preset": "conventionalcommits",
            "releaseRules": [
              {
                "message": "*\\[major\\]*",
                "release": "major"
              },
              {
                "message": "*\\[bug-fix\\]*",
                "release": "patch"
              },
              {
                "message": "!(*\\[major\\]*|*\\[bug-fix\\]*)",
                "release": "minor"
              }
            ]
          }],
          [
            "@semantic-release/release-notes-generator", {
              "preset": "conventionalcommits",
              "presetConfig": {
                "types": [
                  {
                    "message": "[major]*",
                    "section": "‚ú® Major",
                    "hidden": false
                  },
                  {
                    "message": "[bug-fix]*",
                    "section": "üêõ Bug-Fix",
                    "hidden": false
                  },
                  {
                    "message": "!(*\\[major\\]*|*\\[bug-fix\\]*)",
                    "section": "üìù Minor Changes",
                    "hidden": false
                  }
                ]
              }
            }
          ],

          [
            "@semantic-release/changelog"
          ],
          [
            "@semantic-release/github"
          ],
          [
            "@semantic-release/git"
          ]
        ]
      }
  }