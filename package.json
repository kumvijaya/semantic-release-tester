{
    "name": "semantic-release-tester",
    "repository": {
      "type": "git",
      "url": "https://github.com/kumvijaya/semantic-release-tester.git"
    },
    "private": true,
    "scripts": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start",
      "export": "next build && next export"
    },
    "dependencies": {
      "next": "^10.0.0",
      "react": "17.0.1",
      "react-dom": "17.0.1",
      "date-fns": "^2.11.1",
      "gray-matter": "^4.0.2",
      "remark": "^12.0.0",
      "remark-html": "^12.0.0"
    },
    "devDependencies": {
      "@octopusdeploy/octopackjs": "^0.2.4",
      "semantic-release": "^17.3.4"
    },
    "release": {
        "branches": [
          "master",
          "main",
          {
            "name": "beta",
            "prerelease": true
          },
          {
            "name": "alpha",
            "prerelease": true
          }
        ],
        "plugins": [
          ["@semantic-release/commit-analyzer", {
            "preset": "conventionalcommits",
            "releaseRules": [
              {
                "type": "major",
                "release": "major"
              },
              {
                "type": "minor",
                "release": "minor"
              },
              {
                  "type": "bugfix",
                  "release": "patch"
              },
              {
                  "subject": "no-release:",
                  "message": "no-release:",
                  "release": false
              }
              ],
            "parserOpts": {
              "noteKeywords": [
                "major",
                "minor",
                "bugfix"
              ]
            }
          }],
          ["@semantic-release/release-notes-generator", {
            "preset": "conventionalcommits",
            "presetConfig": {
                "types": [
                  {"type": "major", "section": "Major updates", "hidden": false},
                  {"type": "minor", "section": "Minor updates", "hidden": false},
                  {"type": "bugfix", "section": "Bug Fix", "hidden": false},
                  {"subject": ".*", "section": "Minor changes", "hidden": false},
                  {"message": "*", "section": "Minor changes", "hidden": false}
                ]
              },
              "parserOpts": {
                "noteKeywords": [
                  "major",
                  "minor",
                  "bugfix"
                ]
              }
            }
            ],

            [
              "@semantic-release/changelog",
              {
                "changelogFile": "CHANGELOG.md"
              }
            ],
            "@semantic-release/github",
            [
              "@semantic-release/git", {
                "assets": ["package.json", "CHANGELOG.md"],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
              }
            ]
          ]
      }
  }